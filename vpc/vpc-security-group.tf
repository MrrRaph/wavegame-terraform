# --- Security groups ---
# Security group: Allow HTTP/HTTPS, MySQL, MSSQL and ICMP inbound connections
resource "aws_security_group" "allow_tls" {
  vpc_id = aws_vpc.this.id
  name = "Allow TLS"
  description = "Allow TLS"

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

